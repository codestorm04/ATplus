  <tbody>
    <% @need.each do |question| %>
      <tr>
        <td><a class="btn btn-link" href="/questions/show?qid=<%= question.id %>"><%= question.title %></a></td>
        <td><a class="btn btn-link" href="/users"><%= question.questionuser %></a></td>
        <td><%= question.article.title %></td>
        <td><%= question.field %></td>
        <td><div class="badge"><%= question.likes.count %></div></td>
        <td><%= question.created_at %></td>
        <td><%= question.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
