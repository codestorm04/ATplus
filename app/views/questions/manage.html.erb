<p id="notice"><%= notice %></p>
<p><%=link_to 'personal information',:controller => :users,:action => :information%></p>
<h1>Your Questions</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Questionuser</th>
      <th>Article</th>
      <th>Field</th>
      <th>Filepath</th>
      <th>Likes</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.content %></td>
        <td><%= question.questionuser %></td>
        <td><%= question.article.title %></td>
        <td><%= question.field %></td>
        <td><%= question.filepath %></td>
        <td><%= question.likes.count %></td>
        <td><%= link_to 'Show',{:action => "show",:qid => question.id} %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%if(question.state==nil ||question.state==0)%>
        <td><%= button_to 'ban',:controller =>:questions,:action=>:ban,:qid=> question.id,data:{confirm: 'Are you sure?'}%></td>
        <%else%>
        <td><%= button_to 'open',:controller =>:questions,:action=>:ban,:qid=> question.id,data:{confirm: 'Are you sure?'}%></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to the main page',:controller =>:questions,:action =>:index%>