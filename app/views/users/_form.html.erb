<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <br/><br/><br/>
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for(@user) do |f| %>
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        
              <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
        
          <div class="field">
            <%= f.label :email %><br>
            <%= f.text_field :email ,:class => "form-control"%>
          </div>
          <div class="field">
            <%= f.label :name %><br>
            <%= f.text_field :name ,:class => "form-control"%>
          </div>
          <div class="field_pwd">
        	<%= f.label :password %><br>
              <%= f.password_field :password ,:class => "form-control"%>
          </div>
          <div class="field_pwd">
              <%= f.label :password_confirmation, "Confirm password" %><br>
              <%= f.password_field :password_confirmation ,:class => "form-control" %>
          </div>
          <div class="field">
            <%= f.label :admin %><br>
            <%= f.number_field :admin ,:class => "form-control"%>
          </div>
          <div class="field">
            <%= f.label :gender %><br>
            <%= f.number_field :sex ,:class => "form-control"%>
          </div>
          <div class="field">
            <%= f.label :institute %><br>
            <%= f.text_field :institute ,:class => "form-control"%>
          </div>
          <div class="field">
            <%= f.label :phonenumber %><br>
            <%= f.text_field :phonenumber,:class => "form-control" %>
          </div>
          <div class="field">
            <%= f.label :field %><br>
            <%= f.text_field :field ,:class => "form-control"%>
          </div>
          <div class="actions">
            <%= f.submit  "Sign up", class: "btn btn-primary"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>