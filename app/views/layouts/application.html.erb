<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag 'application', media: 'all',
                                           'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
    <title>AT+ | Free Academia Knowledge Community</title>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Academia Talk</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/users">Users</a></li>
            <li><a href="/questions">Questions</a></li>
            <li><a href="/fields">Fields</a></li>
            
            <li>
              <form class="navbar-form navbar-left" role="search">
                <div class="form-group input-group-sm">
                  <input type="text" class="form-control " placeholder="looking for questions..." size="50">
                </div>
                &nbsp;
                <button type="submit" class="btn btn-sm btn-primary">Search</button>
              </form>
            </li>
            <li class="navbar-form">
              <a href="/questions/new" style="padding:0px"><button class="btn btn-sm btn-warning">&nbsp;&nbsp;Ask&nbsp;&nbsp;</button></a>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <% user = current_user %>
              <li><%= link_to user.name, '/users', method: "get" %></li>
          		<li><%= link_to "Log out", logout_path, method: "delete" %></li>
          	  <% else %>
                <li><%= link_to "Log in", login_path %></li>
          	  <% end %>
	        </ul>
        </div>
      </div>
    </nav>
      
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
